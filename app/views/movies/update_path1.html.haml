
%h1 Update a Movie

= form_tag update_path2_movies_path , :method => :put do

 = label :movie, :search1, 'Enter the name of the movie you want to update'
 = text_field :movie, :search1
    
 = label :movie, :title, 'Updated Title'
 = text_field :movie, :title
    
 = label :movie, :rating, 'Updated Rating'
 = select :movie, :rat, ['G','PG','PG-13','R','NC-17']
    
 = label :movie, :release_date, 'Updated Date'
 = date_select :movie, :rel_date
    
 = submit_tag 'Update Info'

= link_to 'Back to all movies', movies_path