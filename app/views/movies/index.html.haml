-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to 'Movie Title', movies_path(:sort_by => 'title'), :id => "title_header", :class => @h1
      %th Rating
      %th= link_to 'Release Date', movies_path(:release_by => 'release_date'), :id => "release_date_header", :class => @h2
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
= link_to 'Update a movie', update_path1_movies_path
= link_to 'Delete a movie', delete_path1_movies_path